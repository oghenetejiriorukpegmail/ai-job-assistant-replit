# Environment variables for Job Application SaaS

# Backend
PORT=5000
JWT_SECRET=your_jwt_secret_key

# Frontend
VITE_API_URL=http://localhost:5000
VITE_ENABLE_AI_PARSING=true
VITE_SHOW_RAW_AI_OUTPUT=false


# Database
MONGODB_URI=mongodb://localhost:27017/job-application-saas

# AI API Keys
GOOGLE_API_KEY=your_google_api_key_here
AI_OPENROUTER_API_KEY=your_openrouter_api_key_here
AI_OPENAI_API_KEY=your_openai_api_key_here
AI_ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_GEMINI_API_KEY=your_gemini_api_key_here
AI_MISTRAL_API_KEY=your_mistral_api_key_here
 
# Job Board API Keys

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Indeed API
INDEED_PUBLISHER_ID=your_indeed_publisher_id
INDEED_API_KEY=your_indeed_api_key

# Glassdoor API
GLASSDOOR_PARTNER_ID=your_glassdoor_partner_id
GLASSDOOR_API_KEY=your_glassdoor_api_key

# Logging
LOG_LEVEL=INFO  # Options: ERROR, WARN, INFO, DEBUG